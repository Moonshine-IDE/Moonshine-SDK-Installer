<?xml version="1.0" encoding="utf-8"?>
<s:Skin 
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:mx="library://ns.adobe.com/flex/mx">

	<fx:Metadata>
		<![CDATA[ 
			
			[HostComponent("spark.components.Button")]
			
		]]>
	</fx:Metadata> 

    <s:states>
        <s:State name="up" />
        <s:State name="down" />
        <s:State name="over" />
        <s:State name="disabled" />
    </s:states>


    <s:Rect 
    	top="0"
    	bottom="0"
    	right="0"
    	left="0">
    	
    	<s:fill>
    		<mx:SolidColor color="0x444444" />
    	</s:fill>
    	
    	<s:filters>
    		<s:DropShadowFilter 
    			distance="2" 
    			color="0x0" alpha="0.2" 
    			blurX="8" blurY="8"
    			inner="true" />
    	</s:filters>
    	
    </s:Rect>
    
</s:Skin>


